@model Microsoft.AspNetCore.SpaServices.Prerendering.RenderToStringResult
@{
    ViewData["Title"] = "Home Page";
}
<div id="react-app">@Html.Raw(Model.Html)</div>

@if (Model.Globals != null)
{
<script>
window.initialReduxState = @Html.Raw(Model.Globals.ToString(Newtonsoft.Json.Formatting.None));
</script>
}

@section scripts {
    <script src="~/dist/main-client.js" asp-append-version="true"></script>
    <script>
      (function(w, d){
      var id='embedly-platform', n = 'script';
      if (!d.getElementById(id)){
        w.embedly = w.embedly || function() {(w.embedly.q = w.embedly.q || []).push(arguments);};
        var e = d.createElement(n); e.id = id; e.async=1;
        e.src = ('https:' === document.location.protocol ? 'https' : 'http') + '://cdn.embedly.com/widgets/platform.js';
        var s = d.getElementsByTagName(n)[0];
        s.parentNode.insertBefore(e, s);
      }
      })(window, document);
    </script>
}